<div class="panel panel-default" style="width: 1000px;margin: 0 auto">
    <div class="panel-heading">
        <h4>Detalhe do Participante</h4>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <h4><%= @participante.nome %></h4>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3">
                <strong>Tipo:</strong>
                <br>
                <%= @participante.descr_tipo %>
            </div>
            
            <div class="col-md-3">
                <strong>Característica:</strong>
                <br>
                <%= @participante.descr_caracteristica %>
            </div>
            
            <div class="col-md-3">
                <strong>Transportadora:</strong>
                <br>
                <%= @participante.descr_transportadora  %>
            </div>
            
        </div>
        <div class="row">
            <div class="col-md-12">
                <strong>Nome Fantasia/Apelido:</strong> 
                <br>
                <%= @participante.fantasia %>
            </div>
        </div>
       
        <div class="row">
            <div class="col-md-3">
                <strong>CPF/CNPJ:</strong>
                <br>
                <%= @participante.cnpj %>
            </div>
            <div class="col-md-3">
                <strong>RG/Inscrição Estadual:</strong>
                <br>
                <%= @participante.ie %>
            </div>
            <div class="col-md-6">
                <strong>Site:</strong>
                <br>
                <%= @participante.site %>
            </div>

        </div>

        <div class="row">
            <div class="col-md-2">
                <strong>Telefone 1:</strong>
                <br>
                <%= @participante.tel1 %>
            </div>

            <div class="col-md-2">
                <strong>Telefone 2:</strong>
                <br>
                <%= @participante.tel2 %>
            </div>

            <div class="col-md-2">
                <strong>Telefone 3:</strong>
                <br>
                <%= @participante.tel3 %>
            </div>
        </div>
        <div class="row">
           <div class="col-md-2">
              <strong>Optante Simples:</strong>
              <br>
              <%=  @participante.descr_optante_simples %>
           </div>
           <div class="col-md-2">
               <strong>Relação desde:</strong>
               <br>
               <%= @participante.data_relacao %>
           </div>
           <div class="col-md-2">
               <strong>Inativo:</strong>
               <br>
                <%= @participante.descr_inativo %>
           </div>
           <div class="col-md-6">
              <strong>Indicado Por:</strong>
              <br>
              <%= @participante.indicado_por %>
           </div>

    </div>
    <div class="row">
         <div class="col-md-6">
              <strong>Considerações sobre a relação:</strong>
              <br>
              <%= @participante.obs_relacoes %>
         </div>
         <div class="col-md-6">
              <strong>Observações:</strong>
              <br>
              <%= @participante.observacao  %>
         </div>
    </div>
    
    <% unless @participante.id.nil? %>
        <br>
        <div class="panel panel-default">
            <div class="panel-heading">Contatos </div>
            <div class="panel-body">
            <table class="table table-bordered table-condensed table_serie">
                <thead>
                    <th>Nome</th>
                    <th>Telefone</th>
                    <th>eMail</th>
                    <th>Setor</th>
                    <th style="width:auto" colspan="1"></th>
                </thead>
                <tbody>
                  <% @participante.contatos.each do |contato| %>
                  <tr>
                    <td><%= contato.nome %></td>
                    <td><%= contato.tel %></td>
                    <td><%= contato.email %></td>
                    <td><%= unless contato.setor.nil? then contato.setor.descr end %></td>
                    <td>
                    </td>
                  </tr>
                  <% end %>
                </tbody>
            </table>
            </div>
        </div>
    <%end%>
        <div id="accordion" class="panel panel-info">
            <div class="panel-heading">
                Endereço
            </div>
            <div class="panel-body">

                <div class="row">
                    <div class="col-md-12">
                        <strong>Logradouro:</strong>
                        <br>
                        <%= @participante.ender %>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        <strong>Número:</strong>
                        <br>
                        <%= @participante.numero %>
                    </div>
                   <div class="col-md-4">
                        <strong>Complemento:</strong>
                        <br>
                        <%= @participante.complemento %>
                    </div>

                    <div class="col-md-6">
                        <strong>Bairro:</strong>
                        <br>
                        <%= @participante.bairro %>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-7">
                        <strong>Cidade:</strong>
                        <br>
                        <%= @participante.cidade %>
                    </div>

                    <div class="col-md-2">
                        <strong>Uf:</strong>
                        <br>
                        <%= @participante.uf %>
                    </div>

                    <div class="col-md-3">
                        <strong>CEP:</strong>
                        <br>
                        <%= @participante.cep %>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <strong>Observação:</strong>
                        <br>
                        <%= @participante.obs_ender %>
                    </div>
                </div>
                
            </div>
            <div class="panel-heading">
                Endereço de Cobrança
            </div>
            <div class="panel-body">

                <div class="row">
                    <div class="col-md-12">
                        <strong>Logradouro:</strong>
                        <br>
                        <%= @participante.ender_cob %>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        <strong>Número:</strong>
                        <br>
                        <%= @participante.numero_cob %>
                    </div>
                   <div class="col-md-4">
                        <strong>Complemento:</strong>
                        <br>
                        <%= @participante.complemento_cob %>
                    </div>

                    <div class="col-md-6">
                        <strong>Bairro:</strong>
                        <br>
                        <%= @participante.bairro_cob %>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-7">
                        <strong>Cidade:</strong>
                        <br>
                        <%= @participante.cidade_cob %>
                    </div>

                    <div class="col-md-2">
                        <strong>Uf:</strong>
                        <br>
                        <%= @participante.uf_cob %>
                    </div>

                    <div class="col-md-3">
                        <strong>CEP:</strong>
                        <br>
                        <%= @participante.cep_cob %>
                    </div>
                </div>
                 <div class="row">
                    <div class="col-md-12">
                        <strong>Observação:</strong>
                        <br>
                        <%= @participante.obs_ender_cob %>
                    </div>
                </div>

            </div>
            <div class="panel-heading">
                Endereço de Entrega
            </div>
            <div class="panel-body">

                <div class="row">
                    <div class="col-md-12">
                        <strong>Logradouro:</strong>
                        <br>
                        <%= @participante.ender_entrega %>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        <strong>Número:</strong>
                        <br>
                        <%= @participante.numero_entrega %>
                    </div>
                   <div class="col-md-4">
                        <strong>Complemento:</strong>
                        <br>
                        <%= @participante.complemento_entrega %>
                    </div>

                    <div class="col-md-6">
                        <strong>Bairro:</strong>
                        <br>
                        <%= @participante.bairro_entrega %>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-7">
                        <strong>Cidade:</strong>
                        <br>
                        <%= @participante.cidade_entrega %>
                    </div>

                    <div class="col-md-2">
                        <strong>Uf:</strong>
                        <br>
                        <%= @participante.uf_entrega %>
                    </div>

                    <div class="col-md-3">
                        <strong>CEP:</strong>
                        <br>
                        <%= @participante.cep_entrega %>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <strong>Observação:</strong>
                        <br>
                        <%= @participante.obs_ender_entrega %>
                    </div>
                </div>
                
            </div>
        </div>

        <% if notice %>
        <div class="alert alert-info">
            <p id="notice">
                <%= notice %>
            </p>
        </div>
        <%end%>

    </div>
</div>
<ul class="pager">
    <li>
        <%= link_to 'Editar', edit_participante_path(@participante) %>
    </li>
    <li>
        <%= link_to 'Voltar', participantes_path %>
    </li>
</ul>

<script>
	$(function() {

		var icons = {
			header : "glyphicon glyphicon-chevron-right",
			activeHeader : "glyphicon glyphicon-chevron-down"
		};

		$("#accordion").accordion({
			icons : icons,
		});
	});

</script>
