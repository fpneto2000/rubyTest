<h1>Cadastro Departamentos</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Descrição</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departamentos.each do |departamento| %>
      <tr>
        <td><%= departamento.descr %></td>
        <td><%= link_to 'Show', departamento, :class => 'btn btn-primary btn-xm' %></td>
        <td><%= link_to 'Edit', edit_departamento_path(departamento),:class => 'btn btn-primary btn-xm' %></td>
        <td><%= link_to 'Destroy', departamento, method: :delete, data: { confirm: 'Are you sure?' },:class => 'btn btn-danger btn-xm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Departamento', new_departamento_path, :class=> 'btn btn-primary' %>
