<%= form_for(@finalidade) do |f| %>
<% if @finalidade.errors.any? %>
<div class="alert alert-danger">
	<h5><%= pluralize(@finalidade.errors.count, "error") %> Dados inválidos para gravação:</h5>

	<ul>
		<% @finalidade.errors.full_messages.each do |message| %>
		<li>
			<%= message %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="form-group">
	<div class="row">
		<div class="col-md-12">
			Descrição
			<br>
			<%= f.text_field :descr,:class => 'form-control in', maxlength:45 %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-6">
			Valor Gateway
			<br>
			<%= f.text_field :vlrgate,:class => 'form-control', data: { role: 'money', a_sep: '', a_dec: '.' } %>
		</div>
		<div class="col-md-6">
			Valor comissão Marketing
			<br>
			<%= f.text_field :vlrcomissmark,:class => 'form-control', data: { role: 'money', a_sep: '', a_dec: '.' } %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-6">
			Valor Marketing
			<br>
			<%= f.text_field :vlrmarketing,:class => 'form-control', data: { role: 'money', a_sep: '', a_dec: '.' } %>
			
		</div>
		<div class="col-md-6">
			Valor Embalagem
			<br>
			<%= f.text_field :vlrembalagem,:class => 'form-control', data: { role: 'money', a_sep: '', a_dec: '.' } %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-6">
			Valor Encargos
			<br>
			<%= f.text_field :vlrencargos,:class => 'form-control', data: { role: 'money', a_sep: '', a_dec: '.' } %>
		</div>
	</div>
</div>
<div class="actions">
	<%= f.submit 'Gravar Finalidade', :class => 'btn btn-default' %>
</div>
<% end %>
