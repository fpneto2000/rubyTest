<div class="panel panel-default" style="width: 800px;margin: 0 auto">
	<div class="panel-heading">
		<h4>Detalhe da Finalidade</h4>
	</div>
	<div class="panel-body">
		<p>
			<strong>Descrição:</strong>
			<%= @finalidade.descr %>
		</p>

		<p>
			<strong>Valor Gateway:</strong>
			<%= number_to_currency @finalidade.vlrgate %>
		</p>

		<p>
			<strong>Valor Comissão Marketing:</strong>
			<%= number_to_currency @finalidade.vlrcomissmark %>
		</p>

		<p>
			<strong>Valor Marketing:</strong>
			<%= number_to_currency @finalidade.vlrmarketing %>
		</p>

		<p>
			<strong>Valor Embalagem:</strong>
			<%= number_to_currency @finalidade.vlrembalagem %>
		</p>

		<p>
			<strong>Valor Encargos:</strong>
			<%= number_to_currency @finalidade.vlrencargos %>
		</p>
		<% if notice %>
		<div class="alert alert-info">
			<p id="notice">
				<%= notice %>
			</p>
		</div>
		<%end%>

	</div>
</div>

<ul class="pager">
	<li>
		<%= link_to 'Editar', edit_finalidade_path(@finalidade) %>
	</li>
	<li>
		<%= link_to 'Voltar', finalidades_path %>
	</li>
</ul>
